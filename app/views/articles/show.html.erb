<h2 align="center">Title: <%= @article.title %></h2>
<% if @article.user %>

<div align="center">
 <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(@article.user),user_path(@article.user) %></li>
                <li class="article-title">
                    <%= link_to @article.user.username,user_path(@article.user)%>
                </li>
                <li><small><%= pluralize(@article.user.articles.count,"article") if @article.user.articles %></small></li>
            </div>
        </div>
    </ul>
</div>

<% end %>

<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center"><strong>Description:</strong></h4>
    
    <hr>
    <%= simple_format(@article.description) %>
    


<div class="article-actions">
    
    <%= link_to "View All", articles_path ,class:"btn btn-xs btn-success"%>

<% if logged_in? && current_user == @article.user%>

 <%= link_to "Delete", article_path(@article), method: :delete,data: {confirm:"Are you sure?"},class:"btn btn-xs btn-danger"%>
<%= link_to "Edit", edit_article_path(@article) ,class:"btn btn-xs btn-primary"%>
<% end%>
</div>

</div>



