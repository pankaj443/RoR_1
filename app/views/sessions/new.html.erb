<h1 align="center">Log in</h1>

<%= form_for(:session,:html => {class:"form-horizontal",role:"form"},url: login_path)  do |f| %>

 <div class="form-group">
      <div class="control-label col-sm-1" >


    <%= f.label :email %>
    </div>
    
    <div class='col sm-2'>
         <%= f.email_field :email,class:"form-control", placeholder: "Enter Email",autofocus: true %>
    </div>
    </div>
   
   
   
    <div class="form-group">
      <div class="control-label col-sm-1">


  <%= f.label :password %>
    </div>
    
    <div class='col sm-2'>
         <%= f.password_field :password,rows:10,class:"form-control",autocomplete: "off" %>
    </div>
    </div>
    
    
     <div class="form-group">
      <div class="col-sm-offset-5 col-sm-10">
          
          
           <%= f.submit "Log In", class:'btn-primary btn-lg' %>
          
    </div>
    </div>
    


<% end %>

<div class="col-xs-4 col-xs-offset-5">
   [ <%= link_to "Back To Home", articles_path %> ]
    
</div>
